{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Server: dev",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "Simulator: run",
			"type": "shell",
			"command": "python",
			"args": [
				"simulate.py",
				"--animalId",
				"GB-sim-0001"
			],
			"options": {
				"cwd": "${workspaceFolder}/simulator"
			}
		},
		{
			"label": "PlatformIO: Build ESP32 Firmware",
			"type": "shell",
			"command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\platformio.exe",
			"args": [
				"run"
			],
			"options": {
				"cwd": "${workspaceFolder}/firmware/esp32"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "PlatformIO: Upload ESP32 Firmware",
			"type": "shell",
			"command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\platformio.exe",
			"args": [
				"run",
				"--target",
				"upload"
			],
			"options": {
				"cwd": "${workspaceFolder}/firmware/esp32"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "PlatformIO: Monitor ESP32",
			"type": "shell",
			"command": "${env:USERPROFILE}\\.platformio\\penv\\Scripts\\platformio.exe",
			"args": [
				"device",
				"monitor"
			],
			"options": {
				"cwd": "${workspaceFolder}/firmware/esp32"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Guardian Band Server",
			"type": "shell",
			"command": "node dist/index.js",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Server - Full Path",
			"type": "shell",
			"command": "node",
			"args": [
				"c:\\Users\\kalvi\\OneDrive\\Documents\\VanRakshak\\server\\dist\\index.js"
			],
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "PIO Build",
			"type": "shell",
			"command": "C:\\Users\\kalvi\\.platformio\\penv\\Scripts\\platformio.exe",
			"args": [
				"run"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "PIO Build ESP32",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"cd /d c:\\Users\\kalvi\\OneDrive\\Documents\\VanRakshak\\firmware\\esp32 && C:\\Users\\kalvi\\.platformio\\penv\\Scripts\\platformio.exe run"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"label": "PIO Build Now",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"cd /d c:\\Users\\kalvi\\OneDrive\\Documents\\VanRakshak\\firmware\\esp32 && C:\\Users\\kalvi\\.platformio\\penv\\Scripts\\platformio.exe run"
			],
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "PIO Upload ESP32",
			"type": "shell",
			"command": "cmd",
			"args": [
				"/c",
				"cd /d c:\\Users\\kalvi\\OneDrive\\Documents\\VanRakshak\\firmware\\esp32 && C:\\Users\\kalvi\\.platformio\\penv\\Scripts\\platformio.exe run --target upload"
			],
			"problemMatcher": [],
			"group": "build"
		}
	]
}